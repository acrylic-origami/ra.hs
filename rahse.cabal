                     , purebase/hiddens/Data/Functor/*.hs, purebase/hiddens/Data/Semigroup/*.hs, purebase/hiddens/Data/*.hs, purebase/hiddens/Control/Concurrent/*.hs, purebase/hiddens/Control/Monad/ST/*.hs, purebase/hiddens/Control/Monad/ST/Lazy/*.hs
                     , purebase/base/C/GHC/*.hs-boot, purebase/base/C/GHC/*.hs-boot, purebase/base/C/Data/Semigroup/*.hs-boot, purebase/hiddens/Data/Semigroup/*.hs-boot
                     , purebase/insts/*.hs
                     , purebase/purebase.cabal
